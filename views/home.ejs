<% for( let project of projects ) { %>
        <div class="col-sm-4   animate__animated      animate__flipInX">
        
            <div class="card">
              <div class="d-flex ">
                <h3 class="card__title w-100" ><a href="./projectdetails/<%= project.id %> " ><%= project.name%> </a></h3>
             <div  class="  d-flex flex-row-reverse fs-5">
                <div class="update">
                  <a  class="border-0" data-bs-toggle="modal" data-bs-target="#updateModal-<%= project.id %>" ><i class="fa-regular fa-pen-to-square update"></i></a>
                </div>
             <form action="/delete/<%= project.id %>" method="post">
              <button  type="submit" class="border-0"><i class="fa-regular fa-trash-can delete"></i></button>
             </form> 
             </div>
              </div>
             
               
 <!-- Modal for update Project-->
 <div class="modal fade" id="updateModal-<%= project.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Update Project</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/update/<%=project.id%>" method="post">
          <div class="mb-3">
            <label for="exampleInputProjectName" class="form-label">Project Name</label>
            <input type="text" class="form-control" id="exampleInputProjectName" aria-describedby="ProjectHelp" name="name" value="<%= project.name%>">
            </div>
            <div class="mb-3">
              <label for="exampleInputPrjectDes" class="form-label">Project description</label>
              <input type="text" class="form-control" id="exampleInputPrjectDes" name="description" value="<%= project.description%>">
              </div>
              <div class="mb-3">
                <label for="exampleInputAuthor" class="form-label">Author Name</label>
                <input type="text" class="form-control" id="exampleInputAuthor" name="author" value="<%= project.author%>" disabled>
                </div>
              <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Project Type</label>
                <select class="form-select" name="projectType">
                  <option value="web" name="web">Web</option>
                  <option value="android" name="Android">Android</option>
                  <option value="ios" name="IOS">IOS</option>
                  <option value="desktop" name="Desktop">Desktop</option>
                  <option value="other" name="Other">Other</option>
                </select>
            
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Update Project</button>
              </div>
        
              </div>
</form>
    </div>
    </div>
  </div>    
              
