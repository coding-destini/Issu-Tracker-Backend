  <script>
    // Simulated existing labels data
    var existingLabels = ['Label1', 'Label2', 'Label3'];
  
    // Get the select element and other elements
    var labelSelect = document.getElementById('labelSelect');
    var newLabelInput = document.getElementById('newLabelInput');
    var addLabelButton = document.getElementById('addLabelButton');
  
    // Add event listener for input changes
    labelSelect.addEventListener('change', function(event) {
      var selectedValue = event.target.value;
      if (selectedValue === 'add') {
        showNewLabelInput();
      }
    });
  
    // Add event listener for add label button
    addLabelButton.addEventListener('click', function() {
      var newLabel = newLabelInput.value.trim();
      if (newLabel) {
        addNewLabel(newLabel);
      }
      resetNewLabelInput();
    });
  
    // Function to show the input field and add button
    function showNewLabelInput() {
      newLabelInput.style.display = 'inline-block';
      addLabelButton.style.display = 'inline-block';
      labelSelect.style.display = 'none';
    }
  
    // Function to reset the input field and add button
    function resetNewLabelInput() {
      newLabelInput.style.display = 'none';
      addLabelButton.style.display = 'none';
      labelSelect.style.display = 'inline-block';
      newLabelInput.value = '';
    }
  
    // Function to add a new label as an option
    function addNewLabel(label) {
      var option = document.createElement('option');
      option.value = label;
      option.textContent = label;
      labelSelect.insertBefore(option, labelSelect.lastElementChild);
    }
  </script>